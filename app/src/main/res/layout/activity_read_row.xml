<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ab_txt_date"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ab_txt_match"
                android:textSize="10sp"
                android:text="2017-06-04"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/ab_txt_match"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="25sp"
                android:text="Team 1 vs Team 2"
                />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/ar_txt_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:gravity="center"
                android:text="In Progress"/>

            <LinearLayout
                android:id="@+id/ar_ll_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/ar_rb_team1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="team1"
                        android:onClick="radioClick"/>

                    <RadioButton
                        android:id="@+id/ar_rb_draw"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="draw"
                        android:onClick="radioClick"/>

                    <RadioButton
                        android:id="@+id/ar_rb_team2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="team2"
                        android:onClick="radioClick"/>

                </RadioGroup>

            </LinearLayout>
        </RelativeLayout>





    </LinearLayout>



</RelativeLayout>
